<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%# console.log(animals) %>

    <%- include('./partials/nav.ejs') %>

    <h1>Animals Index</h1>

    <div class="animal-container">

        <% for (let i = 0; i < animals.length; i++) { %>

            <div class="animal">

                <a href='/animals/<%= animals[i]._id %>' class="animal-species">
                    <%= animals[i].species %>
                </a>
                
                <!-- <p>Click here to see more</p> -->

                <!--delete form here-->
                <form action='/animals/<%= animals[i]._id%>/?_method=DELETE' method='post' id="deleteform">
                    <input type='submit' value='Delete Animal'>
                </form>
                
                <br>

            <div>

        <% } %>

    </div>

</body>
</html>